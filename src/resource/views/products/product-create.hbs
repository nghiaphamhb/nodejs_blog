{{!-- views/product-create.hbs --}}
<div class="container my-5" style="max-width: 600px;">
  <h1 class="h3 mb-4">Create new product</h1>

  {{!-- Hiển thị lỗi chung nếu có --}}
  {{#if error}}
    <div class="alert alert-danger">
      {{error}}
    </div>
  {{/if}}

  <form action="/product/create" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Product's name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Enter product name"
        required
      >
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
        rows="4"
        placeholder="Enter product description (optional)"
      ></textarea>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">URL image (URL or /images/...)</label>
      <input
        type="text"
        class="form-control"
        id="image"
        name="image"
        placeholder="/im/cafe-sua-da.jpg or https://..."
      >
    </div>

    <div class="d-flex justify-content-between">
      <a href="/me/stored/products" class="btn btn-outline-secondary">
        ← Back to the list
      </a>
      <button type="submit" class="btn btn-primary">
        Save
      </button>
    </div>
  </form>
</div>
