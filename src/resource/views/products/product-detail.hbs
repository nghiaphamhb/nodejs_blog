{{!-- product-detail.hbs --}}
<div class="container my-5">

  <div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
      <a href="/" class="btn btn-outline-secondary btn-sm">
        ← Return to list
      </a>
    </div>

    <span class="badge bg-primary">ID: {{product.id}}</span>
  </div>

  <div class="row g-4">
    {{!-- Cột ảnh --}}
    <div class="col-12 col-md-5">
      <div class="card shadow-sm">
        {{#if product.image}}
          <img
            src="{{product.image}}"
            class="card-img-top img-fluid"
            alt="{{product.name}}"
            style="object-fit: cover; max-height: 320px;"
          >
        {{else}}
          <div class="card-body d-flex align-items-center justify-content-center" style="height: 320px;">
            <span class="text-muted">No image</span>
          </div>
        {{/if}}
      </div>
    </div>

    {{!-- Cột thông tin --}}
    <div class="col-12 col-md-7">
      <div class="card border-0">
        <div class="card-body p-0">
          <h1 class="h3 mb-3">{{product.name}}</h1>

          {{!-- Nếu có price thì hiển thị, không có thì ẩn --}}
          {{#if product.price}}
            <p class="fs-4 fw-semibold text-danger mb-3">
              {{product.price}} ₫
            </p>
          {{/if}}

          <h6 class="text-uppercase text-muted mb-2">Description</h6>
          <p class="text-body">
            {{#if product.description}}
              {{product.description}}
            {{else}}
              No description.
            {{/if}}
          </p>

          <hr class="my-4">

          <div class="d-flex flex-wrap gap-2">
            <button type="button" class="btn btn-primary">
              Add to cart
            </button>
            <button type="button" class="btn btn-outline-primary">
              Buy now
            </button>
          </div>

        </div>
      </div>
    </div>
  </div>

</div>
