{{!-- views/product-result.hbs --}}
<div class="container my-5" style="max-width: 600px;">

  {{#if success}}
    <div class="alert alert-success">
      üéâ Successful created products!
    </div>

    <div class="card shadow-sm">
      {{#if product.image}}
        <img
          src="{{product.image}}"
          class="card-img-top"
          alt="{{product.name}}"
          style="object-fit: cover; max-height: 260px;"
        >
      {{/if}}

      <div class="card-body">
        <h5 class="card-title mb-2">{{product.name}}</h5>
        <p class="card-text text-muted mb-1">
          <strong>ID:</strong> {{product.id}}
        </p>
        <p class="card-text">
          {{#if product.description}}
            {{product.description}}
          {{else}}
            No description.
          {{/if}}
        </p>

        <div class="d-flex gap-2 mt-3">
          <a href="/" class="btn btn-outline-secondary">
            ‚Üê Return to list
          </a>
          <a href="/product/create" class="btn btn-primary">
            Create new
          </a>
        </div>
      </div>
    </div>

  {{else}}
    <div class="alert alert-danger">
      ‚ùå An error occurred when creating the product.
      {{#if error}}
        <div class="mt-2">
          <small>Error details: {{error}}</small>
        </div>
      {{/if}}
    </div>

    <a href="/product/create" class="btn btn-primary">
      ‚Üê Try again
    </a>
  {{/if}}

</div>
