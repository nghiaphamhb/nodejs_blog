<div class="mt-4">
    
    <a href="/me/stored/products" style="text-decoration: none;">
    Return to list</a>
    <h1>My trash</h1>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Food's name</th>
            <th scope="col" colspan="2">Description</th>
            </tr>
        </thead>
        <tbody>
            {{#each deletedFoods}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>
                    <a href="" class="btn btn-link btn-restore" data-id="{{this.id}}">Restore</a>
                    <a href="" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#delete-food-modal" data-id="{{this.id}}">Destroy</a>
                </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center">
                Trash empty
              </td>
            </tr>
            {{/each}}
        </tbody>
        </table>
</div>

{{!-- Confirm delete food modal - Bootstrap 5 --}}
<div id="delete-food-modal" class="modal fade" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Destroy food?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Do you really want to destroy this food?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-food" type="button" class="btn btn-danger">Destroy</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

{{!-- Delete hidden form --}}
<form name="delete-food-form" method="POST"></form>
{{!-- Restore hidden form --}}
<form name="restore-food-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var foodId;
        var deleteForm = document.forms['delete-food-form'];
        var restoreForm = document.forms['restore-food-form'];
        var btnDeleteFood = document.getElementById('btn-delete-food');
        var deleteFoodModal = document.getElementById('delete-food-modal');
        var restoreBtn = $('.btn-restore')

        // Restore btn clicked
        restoreBtn.click(function (e) {
          e.preventDefault();
          
          var foodId = $(this).data('id');
          restoreForm.action = '/product/' + foodId + '/restore?_method=PATCH';
          restoreForm.submit();
        });

        // When dialog confirm clicked - Bootstrap 5
        deleteFoodModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            foodId = button.getAttribute('data-id');
            console.log('Food ID to delete:', foodId);
        });
        
        // When destroy food btn clicked
        btnDeleteFood.onclick = function () {
          if (deleteForm) {
            // HARD DELETE (destroy) d√πng /force
            deleteForm.action = '/product/' + foodId + '/force?_method=DELETE';
            deleteForm.submit();
          } 
        }

    });
</script>